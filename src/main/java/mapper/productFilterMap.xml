<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.productFilterMap">
	<!-- 매핑 등록 -->
	<insert id="insertProductFilter" parameterType="map">
		INSERT INTO product_filter_map (product_id, filter_id)
		VALUES (#{productId}, #{filterId})
	</insert>

	<!-- 특정 상품의 필터 매핑 삭제 -->
	<delete id="deleteProductFilters" parameterType="long">
		DELETE FROM product_filter_map
		WHERE product_id = #{productId}
	</delete>

</mapper>